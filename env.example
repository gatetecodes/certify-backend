# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/certify
DB_USERNAME=postgres
DB_PASSWORD=your-database-password

# JWT Security Configuration
# Generate a secure random string for production (e.g., 64+ characters)
JWT_SECRET=your-jwt-secret-key-minimum-64-characters-long

# Bootstrap Admin Configuration
# Global toggle for seeding initial admin users
CERTIFY_BOOTSTRAP_ADMIN_ENABLED=true

# First tenant (merchant) + TENANT_ADMIN
CERTIFY_BOOTSTRAP_ADMIN_TENANT_NAME=Your Tenant Name
CERTIFY_BOOTSTRAP_ADMIN_TENANT_SLUG=your-tenant-slug
CERTIFY_BOOTSTRAP_ADMIN_EMAIL=tenant-admin@example.com
CERTIFY_BOOTSTRAP_ADMIN_PASSWORD=YourSecurePassword123!
CERTIFY_BOOTSTRAP_ADMIN_FULL_NAME=Tenant Admin Full Name

# Platform SYSTEM_ADMIN (Sec CERTIFICATE operator)
CERTIFY_BOOTSTRAP_ADMIN_SYSTEM_EMAIL=system-admin@example.com
CERTIFY_BOOTSTRAP_ADMIN_SYSTEM_PASSWORD=YourSecurePassword123!
CERTIFY_BOOTSTRAP_ADMIN_SYSTEM_FULL_NAME=System Admin Full Name

# Optional: CORS Configuration (has defaults in application.yml)
# CORS_ALLOWED_ORIGINS=http://localhost:4200

# Optional: Verification Base URL (has default in application.yml)
# CERTIFY_VERIFICATION_BASE_URL=http://localhost:4200/verify
